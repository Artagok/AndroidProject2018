<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.pau_nunez.calculadora.MemoryGame">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bStart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1.5"
            android:background="#10c900"
            android:text="START" />

        <TextView
            android:id="@+id/textSegons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="#8e8e8e"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="Time: 0 s "
            android:textAlignment="center"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/bScoreboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1.9"
            android:background="#000000"
            app:srcCompat="@android:drawable/btn_star_big_on"
            tools:layout_width="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bCard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bCard5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="3"
            android:background="#000000"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bCard9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />

            <ImageButton
                android:id="@+id/bCard12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:backgroundTint="#000000"
                android:padding="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pokemon_card_back" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
