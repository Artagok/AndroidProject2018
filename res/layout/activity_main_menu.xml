<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.pau_nunez.calculadora.MainMenu">

    <Button
        android:id="@+id/bCalcultor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_weight="4"
        android:background="#000000"
        android:text="Calculator"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <Button
        android:id="@+id/bMemoryGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:background="#000000"
        android:text="Memory Game"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <Button
        android:id="@+id/bMusicPlayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:background="#000000"
        android:text="Music Player"
        android:textColor="#ffffff"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textInfoLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical|center_horizontal"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bLogout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ef0000"
            android:text="Logout"
            android:textSize="18sp"
            tools:text="Logout" />
    </LinearLayout>
</LinearLayout>
